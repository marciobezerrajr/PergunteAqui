<%- include ('partials/header.ejs'); %>


    <body>
        <%- include ('partials/navbar.ejs'); %>

            <div class="container"><br>
                <h1>Todas as Perguntas</h1><hr>

                <div class="card-body">
                    <a href="/ask" class="btn btn-primary">Perguntar</a>
                </div>

                
                <% asks.forEach(ask=> { %>

                    <div class="card">
                        <div class="card-body">
                            <h3 style="color:crimson">
                                <%= ask.title %>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <a href="/ask/<%= ask.id %>" class="btn btn-primary">Responder</a>
                        </div>
                    </div>
                    <% }) %>
            </div>
    </body>
    <%- include ('partials/footer.ejs'); %>